<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" parallel="classes" thread-count="2" verbose="1">
    
    <listeners>
        <listener class-name="com.mryoda.diagnostics.api.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="Smoke Tests" preserve-order="true">
        <classes>
            <class name="com.mryoda.diagnostics.api.tests.UserAPITest">
                <methods>
                    <include name="testGetAllUsers"/>
                    <include name="testGetUserById"/>
                </methods>
            </class>
            <class name="com.mryoda.diagnostics.api.tests.PostAPITest">
                <methods>
                    <include name="testGetAllPosts"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
